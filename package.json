{
  "name": "smart-advisor",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "antd": "^4.16.6",
    "axios": "^0.21.1",
    "bulma": "^0.9.3",
    "cra-template-mb-ui": "1.9.3",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.13.1",
    "react": "^17.0.2",
    "react-confetti": "^6.0.1",
    "react-dom": "^17.0.2",
    "react-gauge-chart": "^0.3.0",
    "react-number-format": "^4.6.4",
    "react-scripts": "4.0.3",
    "react-spinners": "^0.11.0",
    "recharts": "^2.0.10",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "react-scripts start css-watch",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "version:bump": "standard-version",
    "build:ui": "yarn prep-shared-ui && react-scripts build && yarn finalize-shared-ui",
    "test:ci": "cross-env CI=true react-scripts test --env=jsdom --reporters=default --reporters=jest-trx-results-processor",
    "test:watch": "react-scripts test --env=jsdom",
    "storybook": "start-storybook -p 9009 -s public",
    "storybook:build": "build-storybook -s public",
    "commit": "git-cz",
    "css-build": "node-sass --omit-source-map-url sass/mystyles.scss src/mystyles.css",
    "css-watch": "npm run css-build -- --watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "!src/**/*.stories.tsx",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-gauge-chart": "^0.3.1"
  }
}
